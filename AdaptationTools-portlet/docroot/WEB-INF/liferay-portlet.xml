<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 5.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_5_1_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>AdaptationTools</portlet-name>
		<icon>/icon.png</icon>
		<instanceable>false</instanceable>

		<header-portlet-css>http://extjs.cachefly.net/ext-3.2.1/resources/css/ext-all.css</header-portlet-css>
		<header-portlet-css>http://extjs.cachefly.net/ext-3.2.1/examples/shared/examples.css</header-portlet-css>		
		<header-portlet-css>/js/bubblepopup/jquery.bubblepopup.v2.3.1.css</header-portlet-css>
        <header-portlet-css>/css/main.css</header-portlet-css>
		<header-portlet-javascript>http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js</header-portlet-javascript>
		<header-portlet-javascript>/js/bubblepopup/jquery.bubblepopup.v2.3.1.min.js</header-portlet-javascript>

        <header-portlet-javascript>/js/ext-base.js</header-portlet-javascript>
        <header-portlet-javascript>/js/ext-all.js</header-portlet-javascript>
        <header-portlet-javascript>/js/OpenLayers.js</header-portlet-javascript>
		<header-portlet-javascript>/js/GeoExt.js</header-portlet-javascript>
        <header-portlet-javascript>/js/proj4js-compressed.js</header-portlet-javascript>
        <header-portlet-javascript>/js/mapviewer.js</header-portlet-javascript>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		
		<css-class-wrapper>AdaptationTools-portlet</css-class-wrapper>		
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>
