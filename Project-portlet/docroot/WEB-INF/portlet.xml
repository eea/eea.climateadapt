<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	
	<portlet>
		<portlet-name>projectportlet</portlet-name>
		<display-name>Projects</display-name>
		<portlet-class>
			nl.wur.alterra.cgi.ace.portlet.ProjectPortlet
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/project/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-jsp</name>
			<value>/html/project/edit.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
		</supports>
		<!-- Resource Bundle -->
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>ProjectPortlet</title>
			<short-title>ProjectPortlet</short-title>
			<keywords></keywords>
		</portlet-info>
			<!-- Portlet preferences (configurable by user in portlet EDIT mode) -->
		<portlet-preferences>
			<preference>
				<name>rowsPerPage</name>
				<value>75</value>
			</preference>
			<preference>
				<name>orderByCol</name>
				<value>acronym</value>
			</preference>
			<preference>
				<name>orderByType</name>
				<value>asc</value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	
	<portlet>
		<portlet-name>projectdetailportlet</portlet-name>
		<display-name>ProjectDetailPortlet</display-name>
		<portlet-class>
			nl.wur.alterra.cgi.ace.portlet.ProjectDetailPortlet
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/projectdetail/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
		</supports>
		<!-- Resource Bundle -->
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>ProjectDetailPortlet</title>
			<short-title>ProjectDetailPortlet</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>projectgoeditportlet</portlet-name>
		<display-name>ProjectGoEditPortlet</display-name>
		<portlet-class>
			nl.wur.alterra.cgi.ace.portlet.ProjectGoEditPortlet
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/projectgoedit/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-jsp</name>
			<value>/html/projectgoedit/edit.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
		</supports>
		<!-- Resource Bundle -->
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>ProjectGoEditPortlet</title>
			<short-title>ProjectGoEditPortlet</short-title>
			<keywords></keywords>
		</portlet-info>
		    	<!-- Portlet preferences (configurable by user in portlet EDIT mode) -->
		<portlet-preferences>
			<preference>
				<name>editUrl</name>
				<value>/web/guest/projects</value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>shareprojectportlet</portlet-name>
		<display-name>ShareProjectPortlet</display-name>
		<portlet-class>
			nl.wur.alterra.cgi.ace.portlet.ShareProjectPortlet
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/shareinfo/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
		</supports>
		<!-- Resource Bundle -->
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>ShareProjectPortlet</title>
			<short-title>ShareProjectPortlet</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>