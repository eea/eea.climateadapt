<?xml version="1.0"?>

<portlet-app
	version="2.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
>
	
	<portlet>
		<portlet-name>projectportlet</portlet-name>
		<display-name>Projects</display-name>
		<portlet-class>
			nl.wur.alterra.cgi.ace.portlet.ProjectPortlet
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/project/view.jsp</value>
		</init-param>
		<init-param>
			<name>edit-jsp</name>
			<value>/html/project/edit.jsp</value>
		</init-param>
		<init-param>
			<name>help-jsp</name>
			<value>/html/project/help.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
			<portlet-mode>HELP</portlet-mode>
		</supports>
		<!-- Resource Bundle -->
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>ProjectPortlet</title>
			<short-title>ProjectPortlet</short-title>
			<keywords></keywords>
		</portlet-info>
			<!-- Portlet preferences (configurable by user in portlet EDIT mode) -->
		<portlet-preferences>
			<preference>
				<name>rowsPerPage</name>
				<value>10</value>
			</preference>
		</portlet-preferences>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	
	<portlet>
		<portlet-name>viewprojectportlet</portlet-name>
		<display-name>View Project</display-name>
		<portlet-class>
			nl.wur.alterra.cgi.ace.portlet.ViewProjectPortlet
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/html/viewproject.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
		</supports>
		<!-- Resource Bundle -->
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>ViewProjectPortlet</title>
			<short-title>Project Detail</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	
</portlet-app>